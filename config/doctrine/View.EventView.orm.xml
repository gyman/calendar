<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Calendar\View\EventView" table="read_events" repository-class="App\Repository\EventViewRepository" read-only="true">
        <id name="id" type="uuid" column="event_id">
            <generator strategy="NONE"/>
        </id>

        <many-to-one field="calendar" target-entity="Calendar\View\CalendarView" />

        <field name="name" column="name" type="string" length="255" nullable="false" unique="false" />

        <field name="expression" column="expression" type="string" nullable="true" unique="false" />

        <field name="timespan" column="timespan" type="string" length="12" nullable="true" unique="false" />

    </entity>

</doctrine-mapping>